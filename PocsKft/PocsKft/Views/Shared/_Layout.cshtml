<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>&lt;@ViewBag.Title&gt;</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, user-scalable=no" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/appmain")
</head>
<body ng-app="heribolz">
    <header>
        <nav class="topNavBar">
            <div class="wellPadded">
                <h1 style="margin:0" id="homeLink">{{@Html.ActionLink("SoftBolz", "Index", "Home")}}</h1>
                <div id="loginBox">@Html.Partial("_LoginPartial")</div>
            </div>
        </nav>
    </header>
    <section class="content">
        @RenderBody()
    </section>
    <footer>
        <nav class="bottomNavBar">
            <div class="wellPadded">
                <span>@Html.ActionLink("Home", "Index", "Home")</span>
                <span>@Html.ActionLink("About", "About", "Home")</span>
                <span>@Html.ActionLink("Contact", "Contact", "Home")</span>
                <span>©Harry Bolz co.</span>
            </div>
        </nav>

    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
